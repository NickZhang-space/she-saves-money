/* pages/index/index.wxss */

/* 登录弹窗 */
.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

.modal-content {
  background: white;
  border-radius: 24rpx;
  width: 600rpx;
  overflow: hidden;
  animation: slideUp 0.3s ease;
}

.modal-header {
  padding: 32rpx 32rpx 16rpx;
  border-bottom: 2rpx solid var(--border-color);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
}

.modal-close {
  font-size: 40rpx;
  color: var(--text-lighter);
  padding: 0 16rpx;
}

.modal-body {
  padding: 48rpx 32rpx;
  text-align: center;
}

.modal-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 32rpx;
}

.modal-desc {
  display: block;
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.modal-tip {
  display: block;
  font-size: 24rpx;
  color: var(--text-light);
}

.modal-footer {
  padding: 0 32rpx 32rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 60vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 用户信息 */
.user-info {
  margin-top: 16rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 4rpx solid var(--primary-light);
}

.user-details {
  flex: 1;
}

.user-name {
  display: block;
  margin-bottom: 8rpx;
}

.user-welcome {
  font-size: 24rpx;
}

/* 统计卡片 */
.stats-container {
  margin-top: 16rpx;
}

.stat-card {
  text-align: center;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  color: white;
  position: relative;
  overflow: hidden;
}

.stat-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.stat-value {
  display: block;
  margin-bottom: 8rpx;
}

.stat-desc {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
}

.stat-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-top: 24rpx;
}

.stat-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.stat-item-label {
  display: block;
  font-size: 22rpx;
  color: var(--text-light);
  margin-bottom: 8rpx;
}

.stat-item-value {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--primary-color);
}

/* 快速记录 */
.quick-record {
  margin-top: 24rpx;
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  display: block;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 24rpx;
}

.quick-buttons {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.quick-btn {
  background: white;
  border: 2rpx solid var(--border-color);
  border-radius: 20rpx;
  padding: 32rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s;
}

.quick-btn:active {
  background: var(--background-color);
  border-color: var(--primary-color);
  transform: translateY(-4rpx);
}

.quick-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}

.quick-label {
  font-size: 24rpx;
  color: var(--text-color);
  margin-bottom: 8rpx;
}

.quick-amount {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.more-record {
  text-align: center;
}

/* 我的梦想 */
.my-dreams {
  margin-top: 24rpx;
}

.empty-dreams {
  padding: 64rpx 0;
  text-align: center;
}

.empty-image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: var(--text-light);
  margin-bottom: 32rpx;
}

.dreams-list {
  margin-top: 16rpx;
}

.dream-item {
  padding: 32rpx;
  background: var(--background-color);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.dream-item:last-child {
  margin-bottom: 0;
}

.dream-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.dream-info {
  flex: 1;
}

.dream-name {
  display: block;
  margin-bottom: 8rpx;
}

.dream-amount {
  font-size: 24rpx;
}

.dream-progress {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--primary-color);
}

.dream-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dream-tip {
  font-size: 24rpx;
  color: var(--text-light);
}

/* 最近记录 */
.recent-records {
  margin-top: 24rpx;
}

.empty-records {
  padding: 64rpx 0;
  text-align: center;
}

.records-list {
  margin-top: 16rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid var(--border-color);
}

.record-item:last-child {
  border-bottom: none;
}

.record-icon {
  margin-right: 24rpx;
}

.record-icon .icon {
  width: 48rpx;
  height: 48rpx;
}

.record-details {
  flex: 1;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.record-description {
  flex: 1;
  margin-right: 16rpx;
}

.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-time {
  font-size: 22rpx;
}

.record-dream {
  font-size: 22rpx;
}

/* 社交入口 */
.social-entry {
  margin-top: 24rpx;
  margin-bottom: 48rpx;
}

.social-content {
  display: flex;
  align-items: center;
}

.social-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 24rpx;
}

.social-info {
  flex: 1;
}

.social-title {
  display: block;
  margin-bottom: 8rpx;
}

.social-desc {
  font-size: 24rpx;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .quick-buttons {
    grid-template-columns: repeat(2, 1fr);
    gap: 16rpx;
  }
  
  .quick-btn {
    padding: 24rpx 12rpx;
  }
  
  .quick-icon {
    width: 56rpx;
    height: 56rpx;
  }
  
  .dream-item {
    padding: 24rpx;
  }
}