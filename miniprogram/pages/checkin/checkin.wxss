/* pages/checkin/checkin.wxss */
.container {
  min-height: 100vh;
  padding: 30rpx;
}

/* 统计卡片 */
.stats-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stat-card {
  flex: 1;
  background: linear-gradient(135deg, #FF69B4 0%, #FF1493 100%);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 105, 180, 0.3);
}

.stat-number {
  font-size: 64rpx;
  font-weight: 700;
  color: #FFFFFF;
  line-height: 1;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 5rpx;
}

.stat-unit {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 打卡按钮 */
.checkin-section {
  display: flex;
  justify-content: center;
  padding: 60rpx 0;
}

.checkin-circle {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FF69B4 0%, #FF1493 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 40rpx rgba(255, 105, 180, 0.4);
  transition: all 0.3s;
}

.checkin-circle.checked {
  background: linear-gradient(135deg, #52C41A 0%, #389E0D 100%);
  box-shadow: 0 12rpx 40rpx rgba(82, 196, 26, 0.4);
}

.checkin-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.checkin-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
}

/* AI 消息 */
.ai-message {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.ai-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FF69B4 0%, #FF1493 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  flex-shrink: 0;
}

.ai-bubble {
  flex: 1;
  margin-left: 20rpx;
  background: #FFFFFF;
  padding: 20rpx 24rpx;
  border-radius: 0 20rpx 20rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 105, 180, 0.1);
}

.ai-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 日历 */
.calendar-section {
  margin-bottom: 20rpx;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.calendar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.calendar-month {
  font-size: 24rpx;
  color: #999;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.calendar-weekday {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 10rpx 0;
}

.calendar-tip {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #FFF0F5;
  border-radius: 12rpx;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.tip-text {
  flex: 1;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 奖励说明 */
.reward-section {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.reward-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.reward-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
}

.reward-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.reward-text {
  font-size: 28rpx;
  color: #333;
}
