/* pages/dream-detail/dream-detail.wxss */
.container {
  min-height: 100vh;
  padding-bottom: 150rpx;
}

/* 梦想图片 */
.dream-header {
  position: relative;
  width: 100%;
  height: 500rpx;
}

.dream-image {
  width: 100%;
  height: 100%;
}

.header-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx 30rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
}

.dream-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

/* AI 消息 */
.ai-message-section {
  display: flex;
  padding: 30rpx;
  align-items: flex-start;
}

.ai-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FF69B4 0%, #FF1493 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  flex-shrink: 0;
}

.ai-bubble {
  flex: 1;
  margin-left: 20rpx;
  background: #FFFFFF;
  padding: 20rpx 24rpx;
  border-radius: 0 20rpx 20rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 105, 180, 0.1);
}

.ai-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 进度信息 */
.progress-section {
  margin: 0 30rpx 20rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-percent {
  font-size: 48rpx;
  font-weight: 700;
  color: #FF69B4;
}

.progress-status {
  font-size: 24rpx;
  color: #999;
  padding: 8rpx 16rpx;
  background: #F8F8F8;
  border-radius: 20rpx;
}

.amount-detail {
  margin-top: 30rpx;
}

.amount-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.amount-row:last-child {
  border-bottom: none;
}

.amount-row .label {
  font-size: 28rpx;
  color: #666;
}

.amount-row .value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.amount-row .value.primary {
  color: #FF69B4;
  font-size: 36rpx;
}

/* 梦想原因 */
.reason-section {
  margin: 0 30rpx 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
}

.reason-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: #FFFFFF;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 20rpx;
}

.action-buttons .btn {
  flex: 1;
  margin: 0;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  padding: 40rpx 30rpx 20rpx;
}

.modal-body {
  padding: 20rpx 30rpx 40rpx;
}

.modal-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.modal-input {
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  background: #F8F8F8;
  border-radius: 16rpx;
  font-size: 32rpx;
  color: #333;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #F0F0F0;
}

.modal-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  background: transparent;
  border: none;
  border-radius: 0;
}

.modal-btn.cancel {
  color: #999;
  border-right: 1rpx solid #F0F0F0;
}

.modal-btn.confirm {
  color: #FF69B4;
  font-weight: 600;
}
